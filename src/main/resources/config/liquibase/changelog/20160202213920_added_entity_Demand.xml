<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Demand.
    -->
    <changeSet id="20160202213920" author="jhipster">
        <createTable tableName="demand">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="quantity" type="integer"/>
            
            <column name="branch_id" type="bigint"/>
            <column name="category_id" type="bigint"/>
            <column name="season_id" type="bigint"/>
            <column name="gender_id" type="bigint"/>
            <column name="donation_condition_id" type="bigint"/>
            <column name="size_id" type="bigint"/>
            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="branch_id"
                                 baseTableName="demand"
                                 constraintName="fk_demand_branch_id"
                                 referencedColumnNames="id"
                                 referencedTableName="branch"/>

        <addForeignKeyConstraint baseColumnNames="category_id"
                                 baseTableName="demand"
                                 constraintName="fk_demand_category_id"
                                 referencedColumnNames="id"
                                 referencedTableName="category"/>

        <addForeignKeyConstraint baseColumnNames="season_id"
                                 baseTableName="demand"
                                 constraintName="fk_demand_season_id"
                                 referencedColumnNames="id"
                                 referencedTableName="season"/>

        <addForeignKeyConstraint baseColumnNames="gender_id"
                                 baseTableName="demand"
                                 constraintName="fk_demand_gender_id"
                                 referencedColumnNames="id"
                                 referencedTableName="gender"/>

        <addForeignKeyConstraint baseColumnNames="donation_condition_id"
                                 baseTableName="demand"
                                 constraintName="fk_demand_donationcondition_id"
                                 referencedColumnNames="id"
                                 referencedTableName="donation_condition"/>

        <addForeignKeyConstraint baseColumnNames="size_id"
                                 baseTableName="demand"
                                 constraintName="fk_demand_size_id"
                                 referencedColumnNames="id"
                                 referencedTableName="size"/>

    </changeSet>
</databaseChangeLog>
